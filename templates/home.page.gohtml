{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5 text-start">ğŸ—„ï¸ Courses Database</h1>
                <div class="row">
                    <div class="text-start mt-4">
                        {{$tables := index .Data "tables"}}

                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">tables</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{range $index, $element := $tables}}
                                    <tr data-href="/{{ $element.Name | urlquery }}">
                                        <th scope="row">{{add $index 1}}</th>
                                        <td>{{ $element.Name }}</td>
                                    </tr>
                                {{end}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{end}}
